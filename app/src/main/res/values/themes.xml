<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ALBUS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    Action Bar Styles   -->

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.Audit.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.Audit.ToolbarTitle" parent="TextAppearance.albus.Headline6">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Widget.App.Toolbar.Light">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Light</item>
    </style>
    <style name="ThemeOverlay.App.Toolbar.Light" parent="">
        <item name="colorPrimary">@color/colorSurface</item>
        <item name="colorPrimaryVariant">@color/colorSecondarySurface</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.App.Toolbar.Transparent">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Transparent</item>
    </style>
    <style name="ThemeOverlay.App.Toolbar.Transparent" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
    </style>
</resources>